<resources>
    <!-- Base application theme. -->
    <style name="Theme.TactiGant20" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary"> @color/dark_grey</item>
        <item name="android:windowBackground">@color/dark</item>
        <item name="colorOnPrimary">@color/orange_beige</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="android:alertDialogTheme">@style/AlertDialogThemeDark</item>
    </style>

    <style name="AlertDialogThemeDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/orange_beige</item>
        <item name="android:windowBackground">@color/medium_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>